extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action="/", method="POST")
    div(class="form-group")
      input(name="lead_email", type="email", placeholder="Enter your email address", class="form-control")
      button(type="submit", class="btn btn-success") Submit
  if leads
    h1 Leads
    for lead in leads
      p
        span #{lead.email}
        | 
        a(href="/lead/" + lead.id) Details